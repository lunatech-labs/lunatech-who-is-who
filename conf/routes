# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#authentication
GET         /login                      controllers.PersonController.login()
GET         /authenticate               controllers.PersonController.authenticate(code: String, id_token: String, access_token: String)
GET         /logout                     controllers.PersonController.logout()

POST  	   /images    					        controllers.PersonController.saveImage(id: Long)
GET        /images/:id         			    controllers.PersonController.getImage(id: String)

POST       /person                      controllers.PersonController.create
POST       /person/:id                  controllers.PersonController.update(id:Long)
GET        /person/:id                  controllers.PersonController.edit(id:Long)
GET     /person/:id/delete           controllers.PersonController.delete(id:Long)
DELETE     /person/:id/delete           controllers.PersonController.delete(id:Long)
GET        /                            controllers.PersonController.index()
GET        /people                     controllers.PersonController.all()
GET        /people/:office             controllers.PersonController.searchByLocation(office: String)


# REST api
GET       /api/v1/people               controllers.PersonController.apiAll()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
